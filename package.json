{
  "name": "@overmindtech/sdp-js",
  "version": "0.15.0",
  "description": "Javascript and Typescript libraries for the State Description Protocol",
  "types": "./lib/cjs/types/index.d.ts",
  "main": "./lib/cjs/index.js",
  "scripts": {
    "clean": "rm -rf ./lib",
    "build": "npm run clean && npm run build:esm && npm run build:cjs",
    "build:esm": "tsc -p ./tsconfig.esm.json && mv lib/esm/index.js lib/esm/index.mjs",
    "build:cjs": "tsc -p ./tsconfig.cjs.json",
    "prepack": "npm run build",
    "test": "jest",
    "lint": "eslint ./src",
    "lint:fix": "eslint ./src --fix",
    "typecheck:esm": "tsc -p ./tsconfig.esm.json --noEmit",
    "typecheck:cjs": "tsc -p ./tsconfig.cjs.json --noEmit",
    "typecheck": "npm run typecheck:esm && npm run typecheck:cjs",
    "prettier:check": "prettier ./src --check"
  },
  "exports": {
    ".": {
      "import": {
        "types": "./lib/esm/types/index.d.ts",
        "default": "./lib/esm/index.mjs"
      },
      "require": {
        "types": "./lib/cjs/types/index.d.ts",
        "default": "./lib/cjs/index.js"
      }
    }
  },
  "files": [
    "lib/**/*"
  ],
  "keywords": [],
  "author": "Dylan Ratcliffe",
  "license": "ISC",
  "dependencies": {
    "google-protobuf": "^3.21.2",
    "uuid": "^9.0.0"
  },
  "devDependencies": {
    "@types/google-protobuf": "^3.15.6",
    "@types/jest": "^29.2.4",
    "@types/uuid": "^9.0.0",
    "@typescript-eslint/eslint-plugin": "^5.46.1",
    "@typescript-eslint/parser": "^5.46.1",
    "eslint": "^8.29.0",
    "eslint-config-prettier": "^8.5.0",
    "jest": "^29.3.1",
    "jest-websocket-mock": "^2.4.0",
    "prettier": "^2.8.1",
    "ts-jest": "^29.0.3",
    "typescript": "^4.9.4"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/overmindtech/sdp-js.git"
  },
  "bugs": {
    "url": "https://github.com/overmindtech/sdp-js/issues"
  },
  "homepage": "https://github.com/overmindtech/sdp-js#readme"
}
